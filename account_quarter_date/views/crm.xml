<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="view_crm_case_opportunities_filter" model="ir.ui.view">
        <field name="name">view_crm_case_opportunities_filter</field>
        <field name="model">crm.lead</field>
        <field name="type">search</field>
        <field name="inherit_id" ref="crm.view_crm_case_opportunities_filter" />
        <field name="arch" type="xml">
            <xpath expr="//filter[@name='date_closed']" position="after">
                <filter
                    string="Fiscal Quarter"
                    name="quarter"
                    domain="[]"
                    context="{'group_by':'fiscal_quarter'}"
                />
                <filter
                    string="Fiscal Quarter 1"
                    name="q1"
                    domain="[('fiscal_quarter', 'like', 'Q1')]"
                />
                <filter
                    string="Fiscal Quarter 2"
                    name="q2"
                    domain="[('fiscal_quarter', 'like', 'Q2')]"
                />
                <filter
                    string="Fiscal Quarter 3"
                    name="q3"
                    domain="[('fiscal_quarter', 'like', 'Q3')]"
                />
                <filter
                    string="Fiscal Quarter 4"
                    name="q4"
                    domain="[('fiscal_quarter', 'like', 'Q4')]"
                />
            </xpath>
            <search>
                <field name="fiscal_quarter" />
                <field name="fiscal_year" />
            </search>
        </field>
    </record>

</odoo>
