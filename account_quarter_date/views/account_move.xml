<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="view_move_form" model="ir.ui.view">
        <field name="name">view_move_form</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='invoice_date']" position="after">
                <field name="fiscal_quarter" />
            </xpath>
        </field>
    </record>

    <record id="view_account_invoice_filter" model="ir.ui.view">
        <field name="name">view_account_invoice_filter</field>
        <field name="model">account.move</field>
        <field name="type">search</field>
        <field name="inherit_id" ref="account.view_account_invoice_filter" />
        <field name="arch" type="xml">
            <xpath expr="//filter[@name='due_date']" position="after">
                <separator string="Fiscal Quarter" />
                <filter
                    string="Fiscal Quarter"
                    name="quarter"
                    domain="[]"
                    context="{'group_by':'fiscal_quarter'}"
                />
                <filter
                    string="Fiscal Quarter 1"
                    name="q1"
                    domain="[('fiscal_quarter', 'like', 'Q1')]"
                />
                <filter
                    string="Fiscal Quarter 2"
                    name="q2"
                    domain="[('fiscal_quarter', 'like', 'Q2')]"
                />
                <filter
                    string="Fiscal Quarter 3"
                    name="q3"
                    domain="[('fiscal_quarter', 'like', 'Q3')]"
                />
                <filter
                    string="Fiscal Quarter 4"
                    name="q4"
                    domain="[('fiscal_quarter', 'like', 'Q4')]"
                />
            </xpath>
            <search>
                <field name="fiscal_quarter" />
                <field name="fiscal_year" />
            </search>
        </field>
    </record>

