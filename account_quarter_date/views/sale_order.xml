<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="view_order_form" model="ir.ui.view">
        <field name="name">sale.order.form</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='date_order']" position="after">
                <field name="quarter" />
            </xpath>
        </field>
    </record>

    <record id="search_sale_order_ept" model="ir.ui.view">
        <field name="name">search_sale_order_ept</field>
        <field name="model">sale.order</field>
        <field name="type">search</field>
        <field name="inherit_id" ref="sale.view_sales_order_filter" />
        <field name="arch" type="xml">
            <xpath expr="//filter[@name='my_sale_orders_filter']" position="after">
                <filter
                    string="Fiscal Quarter"
                    name="quarter"
                    domain="[]"
                    context="{'group_by':'quarter'}"
                />
                <filter
                    string="Quarter 1"
                    name="q1"
                    domain="[('quarter', 'like', 'Q1')]"
                />
                <filter
                    string="Quarter 2"
                    name="q2"
                    domain="[('quarter', 'like', 'Q2')]"
                />
                <filter
                    string="Quarter 3"
                    name="q3"
                    domain="[('quarter', 'like', 'Q3')]"
                />
                <filter
                    string="Quarter 4"
                    name="q4"
                    domain="[('quarter', 'like', 'Q4')]"
                />
            </xpath>
            <search>
                <field name="quarter" />
            </search>
        </field>
    </record>

</odoo>
