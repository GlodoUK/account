<odoo>
    <record model="ir.module.category" id="credit_control_category">
        <field name="name">Credit Control</field>
        <field name="sequence">20</field>
    </record>
    <record id="group_credit_control_user" model="res.groups">
        <field name="name">User</field>
        <field name="category_id" ref="credit_control_category" />
    </record>
    <record id="group_credit_control_management" model="res.groups">
        <field name="name">Manage</field>
        <field name="category_id" ref="credit_control_category" />
        <field
            name="implied_ids"
            eval="[(4, ref('credit_control.group_credit_control_user'))]"
        />
        <field
            name="users"
            eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"
        />
    </record>
</odoo>
