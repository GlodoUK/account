<odoo>
    <record model="ir.ui.view" id="view_partner_property_form">
        <field name="name">view_partner_property_form</field>
        <field name="model">res.partner</field>
        <field name="priority">75</field>
        <field name="inherit_id" ref="account.view_partner_property_form" />
        <field name="groups_id" eval="[(5, 0, 0)]" />
        <field name="arch" type="xml">
            <xpath expr="//page[@name='accounting']" position="attributes">
                <attribute name="groups" />
            </xpath>
            <xpath expr="//page[@name='accounting']/group" position="inside">
                <group name="credit_control_policy" string="Credit Control">
                    <field name="credit_control_policy_id" readonly="1" />
                    <field
                        name="credit_control_limit"
                        attrs="{'invisible': [('credit_control_policy_id', '=', False)]}"
                        readonly="1"
                    />
                    <field
                        name="credit_control_used"
                        attrs="{'invisible': [('credit_control_policy_id', '=', False)]}"
                        readonly="1"
                    />
                </group>
            </xpath>
        </field>
    </record>

    <record model="ir.ui.view" id="view_partner_property_form_readwrite">
        <field name="name">view_partner_property_form</field>
        <field name="model">res.partner</field>
        <field name="priority">99</field>
        <field name="inherit_id" ref="account.view_partner_property_form" />
        <field name="groups_id" eval="[(6, 0, [ref('account.group_account_user') ])]" />
        <field name="arch" type="xml">
            <xpath expr="//group[@name='credit_control_policy']" position="replace">
                <group name="credit_control_policy" string="Credit Control">
                    <field name="credit_control_policy_id" />
                    <field
                        name="credit_control_limit"
                        attrs="{'invisible': [('credit_control_policy_id', '=', False)]}"
                    />
                    <field
                        name="credit_control_used"
                        attrs="{'invisible': [('credit_control_policy_id', '=', False)]}"
                    />
                </group>
            </xpath>
        </field>
    </record>
</odoo>
