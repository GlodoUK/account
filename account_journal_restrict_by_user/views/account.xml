<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_account_journal_form" model="ir.ui.view">
        <field name="name">view_account_journal_form</field>
        <field name="model">account.journal</field>
        <field name="inherit_id" ref="account.view_account_journal_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='company_id']" position="before">
                <field name="restricted_user_ids" widget="many2many_tags" />
            </xpath>
        </field>
    </record>
    <record id="view_move_form" model="ir.ui.view">
        <field name="name">view_move_form</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='payment_reference']" position="after">
                <field name="restricted_user_ids" invisible='1' />
            </xpath>
            <xpath
                expr="//notebook//page//field[@name='invoice_line_ids']//tree//field[@name='tax_ids']"
                position="after"
            >
                <field name="restricted_user_ids" invisible='1' />
            </xpath>
        </field>
    </record>
</odoo>
